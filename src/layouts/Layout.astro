---
interface Props {
	title: string;
}

const { title } = Astro.props;
// Supports weights 100-900
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import { slide } from "astro:transitions";
import { SEO } from "astro-seo";
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			type="text/partytown"
			src="https://www.googletagmanager.com/gtag/js?id=G-FZ6PHFKXQD"
		></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());
			gtag("config", "G-FZ6PHFKXQD");
		</script>
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title="EXPCTR OFFICIAL WEBSITE"
			description="Japan-based SSW/Producer, EXPCTR's website. New Song Secret Moment is OUT NOW."
			charset="UTF-8"
			openGraph={{
				basic: {
					title: "EXPCTR OFFICIAL WEBSITE",
					type: "website",
					image: "https://expctr.com/img/headshot.png",
				},
			}}
			twitter={{
				creator: "@EXPCTR__",
			}}
			extend={{
				// extending the default link tags
				link: [{ rel: "icon", href: "/favicon.ico" }],
				// extending the default meta tags
				meta: [
					{
						name: "twitter:image",
						content: "https://expctr.com/img/headshot.png",
					},
					{
						name: "twitter:title",
						content: "EXPCTR OFFICIAL WEBSITE",
					},
					{
						name: "twitter:description",
						content: "Japan-based SSW/Producer, EXPCTR's website. ",
					},
					{ name: "viewport", content: "width=device-width" },
					{ name: "twitter:card", content: "summary_large_image" },
				],
			}}
		/>

		<ViewTransitions />
	</head>
	<body transition:animate={slide({ duration: "1s" })}>
		<slot />
		<div class="footer">
			<p>copyright all rights reserved EXPCTR.</p>
		</div>
	</body>
</html>
<style is:global lang="scss">
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	* {
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	html,
	body,
	#root {
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: "Inter Variable", sans-serif;
		background: url("/img/bg-grid.jpg") center center / cover fixed;
	}

	ul {
		padding-inline-start: 0px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	h2 {
		font-size: 6em;
		text-shadow: 1px 1px 10px rgba(255, 255, 255, 0.1);
		font-weight: 100;
		color: #fff;
		@media (max-width: 768px) {
			font-size: 3em;
		}
	}

	.txt {
		font-size: 2em;
		font-weight: 100;
		color: #fff;
		@media (max-width: 768px) {
			font-size: 1.8em;
		}
		a {
			color: #fff;
			text-decoration: underline;
			text-underline-offset: 4px;
		}
	}

	.bold {
		font-weight: 400;
	}

	.header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		padding: 20px;
		z-index: 999;
		display: flex;
		justify-content: center;
		h1 {
			width: 150px;
			img {
				width: 100%;
			}
		}
	}

	.loading {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.aboutSns {
		li {
			margin-bottom: 10px;
			a {
				color: #fff;
				text-decoration: none;
				font-weight: 100;
			}
		}
	}

	.footer {
		p {
			text-align: center;
			color: #fff;
			font-size: 12px;
			font-weight: 100;
			padding: 10px 0 40px;
		}
	}
</style>
