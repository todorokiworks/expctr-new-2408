---
import { getMusic } from "../libs/microcms";

const response = await getMusic({
    fields: ["id", "title", "artist", "link", "image"],
});
---

<section id="music">
    <div class="cInner">
        <h2>music:</h2>
        <div class="swiper swiper-music">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                {
                    response.contents.map((item: any) => (
                        <div class="swiper-slide">
                            <div class="box__wrapper">
                                <div class="box__upper">
                                    <div class="img">
                                        <img src={item.image.url} alt="" />
                                    </div>
                                    <div class="txt">
                                        <h3 set:text={item.title} />
                                        <p set:text={item.artist} />
                                        <a
                                            href={item.link}
                                            class="btn"
                                            target="_blank"
                                        >
                                            Play
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
        <!-- If we need navigation buttons -->
        <div class="button__wrapper">
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</section>

<script>
    import Swiper from "swiper";
    import { Navigation, Autoplay, EffectFade } from "swiper/modules";
    import "swiper/css/bundle";
    export const swiperConfig = {
        modules: [Navigation],
        loop: true,

        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        paginationClickable: true,
        spaceBetween: 10,
        breakpoints: {
            320: {
                slidesPerView: 1.3,
                spaceBetween: 10,
            },
            768: {
                slidesPerView: 1.2,
                spaceBetween: 10,
            },
            1024: {
                slidesPerView: 2.3,
                spaceBetween: 10,
            },
            1400: {
                slidesPerView: 3.3,
                spaceBetween: 10,
            },
        },
    };

    const swiper = new Swiper(".swiper-music", swiperConfig);
</script>

