        width: 90%;
        margin: 0 auto;
        padding: 0px 0 80px;
        color: #fff;
        @media (max-width: 768px) {
            width: 100%;
            padding: 0px 0 80px;
        }
        div.cInner {
            position: relative;
            h2 {
                margin-bottom: 20px;
                @media (max-width: 768px) {
                    font-size: 28px;
                }
            }
            div.swiper {
                position: relative;
                div.swiper-wrapper {
                    div.swiper-slide {
                        div.box__wrapper {
                            background: #2a2a2a;
                            border-radius: 25px;
                            position: relative;
                            padding: 0;
                            max-width: 780px;
                            margin: 0 auto;
                            @media (max-width: 768px) {
                                border-radius: 10px;
                            }
                            div.box__upper {
                                display: flex;
                                justify-content: flex-start;
                                gap: 30px;

                                @media (max-width: 768px) {
                                    gap: 20px;
                                }
                                div.img {
                                    max-width: 220px;
                                    @media (max-width: 768px) {
                                        max-width: 160px;
                                    }
                                    img {
                                        border-radius: 25px 0 0px 25px;
                                        @media (max-width: 768px) {
                                            border-radius: 15px 0 0px 15px;
                                        }
                                    }
                                }
                                div.txt {
                                    padding: 20px 0;
                                    h3 {
                                        margin-bottom: 10px;
                                        font-size: 24px;
                                        font-weight: 500;
                                        @media (max-width: 768px) {
                                            font-size: 18px;
                                            margin-bottom: 5px;
                                        }
                                    }
                                    p {
                                        color: #959595;
                                        font-size: 18px;
                                        font-weight: 300;
                                        margin-bottom: 10px;
                                        @media (max-width: 768px) {
                                            margin-bottom: 10px;
                                            font-size: 14px;
                                        }
                                    }
                                    .btn {
                                        display: block;
                                        font-size: 20px;
                                        font-weight: 500;
                                        text-decoration: none;
                                        border: 1.5px solid #fff;
                                        text-align: center;
                                        border-radius: 50px;
                                        width: fit-content;
                                        padding: 3px 30px;
                                        transition: all 0.3s;
                                        @media (max-width: 768px) {
                                            font-size: 16px;
                                        }
                                        &:hover {
                                            background: #fff;
                                            color: #959595;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
            .button__wrapper {
                position: absolute;
                top: 30px;
                right: 0;
                @media (max-width: 768px) {
                    top: 20px;
                }
                div.swiper-button-prev {
                    top: 0;
                    right: 60px;
                    left: auto;
                    width: 30px;
                    height: 30px;
                    border: 2px solid #fff;
                    border-radius: 50px;
                    @media (max-width: 768px) {
                        right: 50px;
                    }
                }
                div.swiper-button-next {
                    top: 0;
                    width: 30px;
                    height: 30px;
                    border: 2px solid #fff;
                    border-radius: 50px;
                }
                .swiper-button-next:after,
                .swiper-button-prev:after {
                    font-size: 14px;
                    color: #fff;
                }
            }
        }
    }
</style>
