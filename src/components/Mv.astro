---
import { icon } from "@fortawesome/fontawesome-svg-core";
import {
    faYoutube,
    faInstagram,
    faTiktok,
    faSpotify,
    faApple,
    faXTwitter,
    faBandcamp,
} from "@fortawesome/free-brands-svg-icons";

const youtube = icon(faYoutube);
const instagram = icon(faInstagram);
const tiktok = icon(faTiktok);
const spotify = icon(faSpotify);
const apple = icon(faApple);
const x = icon(faXTwitter);
const bandcamp = icon(faBandcamp);

const links = [
    {
        icon: youtube,
        url: "https://www.youtube.com/c/EXPCTR",
    },

    {
        icon: spotify,
        url: "https://open.spotify.com/artist/3ipgUyTWKYk6KAm91kTdrk?si=1NnDDPcJQDChMcWpk-qSxA",
    },
    {
        icon: apple,
        url: "https://music.apple.com/jp/artist/expctr/1438272153",
    },
    {
        icon: x,
        url: "https://twitter.com/expctr__",
    },
    {
        icon: instagram,
        url: "http://instagram.com/expctr",
    },
    {
        icon: tiktok,
        url: "https://www.tiktok.com/@expctr",
    },
    {
        icon: bandcamp,
        url: "https://expctr.bandcamp.com/releases",
    },
];
---

<div id="mv">
    <ul>
        {
            links.map((item) => (
                <li>
                    <a href={item.url} target="_blank">
                        <Fragment set:html={item.icon.html} />
                    </a>
                </li>
            ))
        }
    </ul>
</div>

<style lang="scss">
    #mv {
        width: 100%;
        height: 700px;
        background: url("/img/img_headshot.png") center center / cover no-repeat
            fixed;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        padding-bottom: 40px;

        @media (max-width: 768px) {
            justify-content: flex-end;
            align-items: center;
        }
        ul {
            display: flex;
            gap: 30px;

            margin: 0;

            @media (max-width: 768px) {
                position: fixed;
                left: 50%;
                transform: translateX(-50%);
                bottom: 12px;
                z-index: 90;
            }

            li {
                a {
                    color: #fff;
                    font-size: 26px;
                    transition: all 0.3s;
                    &:hover {
                        opacity: 0.8;
                    }
                }
            }
        }
    }
</style>
